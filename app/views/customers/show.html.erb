<p id="notice"><%= notice %></p>

<p>
  <strong>First name:</strong>
  <%= @customer.first_name %>
</p>

<p>
  <strong>Last name:</strong>
  <%= @customer.last_name %>
</p>

<p>
  <strong>Phone:</strong>
  <%= @customer.phone %>
</p>

<p>
  <strong>Email:</strong>
  <%= @customer.email %>
</p>

<p>
  <h4>Orders:</h4>
  <table>
    <thead>
      <tr>
        <th>Product name</th>
        <th>product count</th>
        <th colspan="5"></th>
      </tr>
    </thead>

    <tbody>
      <% @customer.orders.each do |p| %>
        <tr>
          <td><%= p.product_name %></td>
          <td><%= p.product_count %></td>
          <td><%= link_to 'Show', p %></td>
          <td><%= link_to 'Update', edit_order_path(p) %></td>
          <td><%= link_to 'Delete', p, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
</p>

<%= link_to 'Edit', edit_customer_path(@customer) %> |
<%= link_to 'Back', customers_path %>
